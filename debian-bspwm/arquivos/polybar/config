icon-prev = V
icon-stop = 
icon-play = V
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true
;_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-

